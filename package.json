{
  "name": "mern_shop",
  "version": "1.0.0",
  "description": "Full-Stack Node & Vite e-commerce web application using TypeScript",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node server/dist/index.js",
    "client": "npm run dev --prefix client",
    "server": "nodemon server/src/index.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "postinstall": "tsc -p server",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "node",
    "node-ts",
    "express",
    "typescript",
    "vite",
    "mern-stack"
  ],
  "author": "Dan Smirnov",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "nodemailer": "^6.9.7",
    "slugify": "^1.6.6",
    "stripe": "^14.12.0",
    "uploadthing": "^5.7.4",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.9.2",
    "@types/nodemailer": "^6.4.14",
    "@types/stripe-v3": "^3.1.32",
    "@types/validator": "^13.11.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
